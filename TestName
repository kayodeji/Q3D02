import java.util.Scanner; 

public class TestName
{
	public static void main(String[] args)
	{
		Scanner in = new Scanner(System.in)
		System.out.print("Enter your full name: ");
		String s = in.nextLine();
		Fullname f = new Fullname(s);

		if (f.hasMiddleName())
		{
			System.out.println(f.getFirst() + " has a middle name.");
		}
		else
		{
			System.out.println(f.getFirst() + " has NO middle name.");
			#f.updateMiddle("-");
		}
		System.out.println(f.getFirst() + " " + f.getLast() + " has the initials of " + f.getInitials());

	}

}
